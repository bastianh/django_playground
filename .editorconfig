# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,scss,coffee,py,json,html,jinja}]
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 3 spaces html
[*.{html,jinja}]
indent_style = space
indent_size = 3
